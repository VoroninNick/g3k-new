                .clear
            .contact-data
              = simple_form_for get_order_products, :html => {:class => 'form-horizontal' } do |f|
                .form-horizontal-left
                  = f.input :name, :required => true, placeholder: 'Микола', :label=>false
                  = f.label :"Ваше ім'я", :for=>"contact_name"
                  = f.input :phone, :required => true, placeholder: '+38 (050) 417 07 28', :label=>false
                  = f.label :"Контактний телефон", :for=>"contact_phone"
                .form-horizontal-right
                  = f.input :last_name, :required => true, placeholder: 'Воронін', :label=>false
                  = f.label :"Ваше прізвище", :for=>"contact_last_name"
                  = f.input :email, :required => false, placeholder: 'voronin.nick@gmail.com', :label=>false
                  = f.label :"Електронна пошта", :for=>"contact_email"
                .clear
