                      .itm.rr
                        img.ao1 src=asset_path("arrow-order-01.svg")
                        img.ao2.dn src=asset_path("arrow-order-02.svg")
          .list_of_products_wrapper
            .cart-table
              .cart-table-title
                .cart-coll-name
                  .table-title
                    img src="/assets/g3k-h1-arrow.png"
                    |Назва товару
                .cart-coll-count
                  .table-title
                    img src="/assets/g3k-h1-arrow.png"
                    |Кількість
                    span
                      |(шт.)
                .cart-coll-price
                  .table-title
                    img src="/assets/g3k-h1-arrow.png"
                    |Ціна
                    span
                      |(грн.)
                .clear
            /-@count = 0
            - line_items = LineItem.where(cart_id: session[:cart].id)
            - line_items.each do |l|
              - product = Product.find l.product_id
              .table-item
                .table-item-coll-content
                  .table-item-coll-content-inner
                    .button-delete-item
                      /= link_to image_tag("/assets/remove-icon-hi.png") + '', product, :confirm => 'Ви впевнені?', :method => :delete
                      img src="/assets/remove-icon-hi.png"
                    .image-item
                      img src=product.image
                    .about-item
                      .about-item-title
                        h1 = product.name
                      .about-item-text
                        p = truncate product.short_description, length: 100, omission: '...'
                .table-item-coll-count
                  span
                    /-LineItem.all.each do |item|
                    /  -if (item.cart_id == @cart.id)
                    /    -@count += item.quantity
                .table-item-coll-price
                  p
                    span = product.price
                    span
                      | ,00
                .clear
              .clear
            .cart-result
              .cart-result-inner
                .cart-result-title
                  .table-title
                    img src="/assets/g3k-h1-arrow.png"
                    |Загалом
                    span
                      |(грн.)
                .cart-result-show
                  span
                    /|153,00
                .clear
            .clear
            .cart-checkout-buttons
              .cart-checkout-middle
              .cart-checkout-buttons-next
                .form-actions
                  img src="/assets/g3k-button-arrow-1.png"
                  input class="btn btn btn-primary" name="commit" type="submit" value="Спосіб доставки"
            .clear
